<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/gold"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            style="@style/TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="20dp"
            android:text="Crie seu filme"
            android:textAlignment="center"
            android:background="#FFEF59"
            android:textColor="#FFFF"
            android:padding="6dp"
            android:shadowColor="#FF61FF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:src="@drawable/image_principal"
            android:scaleType="centerCrop"
            android:background="@drawable/image_border"
            android:contentDescription="Figure"
            android:alpha="0.9"


       />


        <Button
            android:id="@+id/btn_cadastro"
            style="@style/ButtonStyle"
            android:text="And the Oscar goes to ..."
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:textColorHint="#fff"
            android:textColor="#FFEF59"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageview2"
            android:orientation="vertical"
            android:src="@drawable/image_fundo"
            android:alpha="0.5" />







    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>