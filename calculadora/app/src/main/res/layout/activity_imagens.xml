<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagensActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:id="@+id/LinearLayout">

        <ImageView
            android:id="@+id/foto1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/taylor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto 1"
            android:id="@+id/txtinformacao"
            android:textSize="20dp"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exibir foto 1"
            android:id="@+id/btfoto1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exibir foto 2"
            android:id="@+id/btfoto2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exibir foto 3"
            android:id="@+id/btfoto3"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exibir foto 4"
            android:id="@+id/btfoto4"/>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>