<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagensActivity">



    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/taylorfundo3"

        >


        <ImageView
            android:id="@+id/foto1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/border"
            android:src="@drawable/taylor" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/txtinformacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Foto 1"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btfoto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exibir foto 1" />

            <Button
                android:id="@+id/btfoto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exibir foto 2" />

            <Button
                android:id="@+id/btfoto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exibir foto 3" />

            <Button
                android:id="@+id/btfoto4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exibir foto 4" />


        </LinearLayout>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>